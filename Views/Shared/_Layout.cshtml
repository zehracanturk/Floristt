<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Florist</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Florist.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">


	<script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
	@* HEADER kısmı: dışarıda, tam genişlikte *@
	@RenderSection("Header", required: false)

	<main role="main" class="pb-3">
		<div class="container">
			@RenderSection("Styles", required: false)
			@RenderBody()
		</div>
	</main>

		@{

			var path = Context.Request.Path;

			var showFooter = !path.StartsWithSegments("/Account/Login") && !path.StartsWithSegments("/Account/Register");

		}

		@if (showFooter)

		{
			@if (showFooter)

			{
				
			}


		}
	<!-- Header/Navigation -->
	<header class="bg-white shadow-md fixed w-full top-0 z-50">
		<nav class="container mx-auto px-4 py-4">
			<div class="flex justify-between items-center">
				<!-- Logo ve Yazı -->
				<div class="flex items-center space-x-2">
					<!-- Logo -->
					<img src="@Url.Content("/images/florist logo1.png")" alt="Florist" class="h-8 w-8" />
					
					<!-- Yazı -->
					<div class="text-2xl font-playfair font-bold text-rose-600">
						Florist
					</div>
				</div>

				<!-- Desktop Navigation -->
				<div class="hidden md:flex space-x-8">
					<a asp-controller="Home" asp-action="Index" class="text-gray-800 hover:text-rose-600 transition-colors">Ana Sayfa</a>
					<a href="/Home/Urunler" class="!text-gray-800 hover:text-rose-600 transition-colors">Ürünler</a>
					<a href="/Home/Occasion" class="!text-gray-800 hover:text-rose-600 transition-colors">Fırsatlar</a>
					<a href="/Home/Hakkimizda" class="!text-gray-800 hover:text-rose-600 transition-colors">Hakkımızda</a>
				</div>

				<!-- Cart and Search -->
				<div class="flex items-center space-x-6">
					<form asp-controller="Search" asp-action="Index" method="get" class="relative">
						<input type="text" name="query" placeholder="Ürün ara..." class="search-input">
						<button type="submit" class="!absolute right-2 top-1/2 -translate-y-1/2 !text-rose-600">
							<i class="fas fa-search"></i>
						</button>

					</form>
					<a href="/Account/Login" class="!text-gray-800 hover:text-rose-600 transition-colors">
						<i class="fas fa-user"></i>
					</a>
					<a href="/Home/Cart" class="!text-gray-800 hover:text-rose-600 transition-colors relative">
						<i class="fas fa-shopping-cart"></i>
						<span class="cart-count absolute -top-2 -right-2 bg-rose-600 text-white rounded-full w-5 h-5 flex items-center justify-center text-xs">0</span>
					</a>

				</div>
			</div>
		</nav>
	</header>
	
	<footer class="bg-gray-900 text-white py-12">
		
			<div class="grid grid-cols-1 md:grid-cols-4 gap-8">
				<div class="flex items-center gap-3">
					<img src="/images/florist logo1.png" alt="Florist Logo" class="h-8 w-auto">
					<div>
						<h3 class="font-playfair text-xl mb-1">Florist</h3>
						<p class="text-gray-400 text-sm">Her durum için güzel çiçekler.</p>
					</div>
				</div>
				<div>
					<h4 class="font-bold mb-4">Linkler</h4>
					<ul class="space-y-2 text-gray-400">
						<li><a href="/Home/Hakkimizda" class="!text-gray-400 hover:!text-white transition-colors">Hakkımızda</a></li>
						<li><a href="#faq" class="!text-gray-400 hover:!text-white transition-colors">SSS</a></li>
						<li><a href="#delivery" class="!text-gray-400 hover:!text-white transition-colors">Teslimat Bilgileri</a></li>
					</ul>
				</div>
				<div>
					<h4 class="font-bold mb-4">İletişim Bilgileri</h4>
					<ul class="space-y-2 text-gray-400">
					<li><i class="fas fa-phone mr-2"></i> 0-216-555-53-24 </li>
						<li><i class="fas fa-envelope mr-2"></i> info@florist.com</li>
					</ul>
				</div>
				<div>
					<h4 class="font-bold mb-4">Bizi Takip Edin</h4>
					<div class="flex space-x-4">
						<a href="#" class="!text-gray-400 hover:!text-white transition-colors"><i class="fab fa-facebook"></i></a>
						<a href="#" class="!text-gray-400 hover:!text-white transition-colors"><i class="fab fa-instagram"></i></a>
						<a href="#" class="!text-gray-400 hover:!text-white transition-colors"><i class="fab fa-twitter"></i></a>
						<a href="#" class="!text-gray-400 hover:!text-white transition-colors"><i class="fab fa-pinterest"></i></a>
					</div>
				</div>
			</div>
			<div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
				<p>&copy; 2025 Florist. Haklarımız Saklıdır.</p>
			</div>
		
	</footer>


	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

