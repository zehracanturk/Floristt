
@{
    Layout = "_Layout";
    ViewData["Title"] = "Checkout";
}

@section Styles {
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <style>
        .font-playfair {
            font-family: 'Playfair Display', serif;
        }

        .font-poppins {
            font-family: 'Poppins', sans-serif;
        }
    </style>

}
<body class="font-poppins bg-gray-50"> </body>
<header class="bg-white shadow-md fixed w-full top-0 z-50">
    <nav class="container mx-auto px-4 py-4">
        <div class="flex justify-between items-center">
            <!-- Logo ve Yazı -->
            <div class="flex items-center space-x-2">
                <!-- Logo -->
                <img src="images/florist logo1.png" alt="Florist Logo" class="h-8 w-8">
                <!-- Yazı -->
                <div class="text-2xl font-playfair font-bold text-rose-600">
                    Florist
                </div>
            </div>

            <!-- Desktop Navigation -->
            <div class="hidden md:flex space-x-8">
                <a asp-controller="Home" asp-action="Index" class="text-gray-800 hover:text-rose-600 transition-colors">Ana Sayfa</a>
                <a href="/Home/Urunler" class="text-gray-800 hover:text-rose-600 transition-colors">Ürünler</a>
                <a href="/Home/Occasion" class="text-gray-800 hover:text-rose-600 transition-colors">Fırsatlar</a>
                <a href="/Home/Hakkimizda" class="text-gray-800 hover:text-rose-600 transition-colors">Hakkımızda</a>
            </div>

            <!-- Cart and Search -->
            <div class="flex items-center space-x-6">
                <form asp-controller="Search" asp-action="Index" method="get" class="relative">
                    <input type="text" name="query" placeholder="Ürün ara..." class="search-input">
                    <button type="submit" class="absolute right-2 top-1/2 -translate-y-1/2 text-rose-600">
                        <i class="fas fa-search"></i>
                    </button>

                </form>
                <a href="/Account/Login" class="text-gray-800 hover:text-rose-600 transition-colors">
                    <i class="fas fa-user"></i>
                </a>
                <a href="/Home/Cart" class="text-gray-800 hover:text-rose-600 transition-colors relative">
                    <i class="fas fa-shopping-cart"></i>
                    <span class="cart-count absolute -top-2 -right-2 bg-rose-600 text-white rounded-full w-5 h-5 flex items-center justify-center text-xs">0</span>
                </a>

            </div>
        </div>
    </nav>
</header>

<main class="container mx-auto px-4 pt-24 pb-16 font-poppins bg-gray-50">
    <div class="text-center py-8">
        <h1 class="font-playfair text-4xl font-bold text-gray-800 mb-4">Sepetim</h1>
        <p class="text-gray-600">Alışverişi Tamamla</p>
    </div>

    <div class="flex flex-col lg:flex-row gap-8">
        <div class="lg:w-2/3">
            <form id="checkoutForm" class="space-y-8">
                <div class="bg-white rounded-lg shadow-md p-6">
                    <h2 class="font-playfair text-2xl font-bold mb-6">Siparişi Tamamla</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <input type="text" placeholder="First Name" required class="w-full border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-rose-500">
                        <input type="text" placeholder="Last Name" required class="w-full border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-rose-500">
                        <input type="email" placeholder="Email" required class="md:col-span-2 w-full border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-rose-500">
                        <input type="text" placeholder="Address" required class="md:col-span-2 w-full border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-rose-500">
                        <input type="text" placeholder="City" required class="w-full border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-rose-500">
                        <input type="text" placeholder="ZIP Code" required pattern="[0-9]{5}" class="w-full border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-rose-500">
                        <input type="tel" placeholder="Phone" required class="w-full border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-rose-500">
                    </div>
                </div>

                <div class="bg-white rounded-lg shadow-md p-6">
                    <h2 class="font-playfair text-2xl font-bold mb-6">Teslimat Seçenekleri</h2>
                    <div class="space-y-4">
                        <label class="flex items-center p-4 border rounded-lg cursor-pointer hover:bg-gray-50">
                            <input type="radio" name="delivery" value="standard" checked class="form-radio text-rose-600">
                            <div class="ml-4">
                                <div class="font-medium">Standart Teslimat</div>
                                <div class="text-sm text-gray-500">2-3 iş günü</div>
                            </div>
                            <div class="ml-auto font-medium">49.00₺</div>
                        </label>
                        <label class="flex items-center p-4 border rounded-lg cursor-pointer hover:bg-gray-50">
                            <input type="radio" name="delivery" value="express" class="form-radio text-rose-600">
                            <div class="ml-4">
                                <div class="font-medium">Hızlı Teslimat</div>
                                <div class="text-sm text-gray-500">Aynı Gün Teslimat</div>
                            </div>
                            <div class="ml-auto font-medium">120.00₺</div>
                        </label>
                    </div>
                </div>

                <div class="bg-white rounded-lg shadow-md p-6">
                    <h2 class="font-playfair text-2xl font-bold mb-6">Ödeme Ayrıntıları</h2>
                    <div class="space-y-6">
                        <input type="text" placeholder="Card Number" pattern="[0-9]{16}" required class="w-full border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-rose-500">
                        <div class="grid grid-cols-2 gap-6">
                            <input type="text" placeholder="MM/YY" pattern="(0[1-9]|1[0-2])\/([0-9]{2})" required class="w-full border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-rose-500">
                            <input type="text" placeholder="CVV" pattern="[0-9]{3,4}" required class="w-full border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-rose-500">
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div class="lg:w-1/3">
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="font-playfair text-2xl font-bold mb-6">SipariŞ Özeti</h2>
                <div class="space-y-4">
                    <div class="flex justify-between">
                        <span class="text-gray-600">Ara Toplam</span>
                        <span id="subtotal" class="font-semibold">0.00₺</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">Kargo</span>
                        <span id="shipping" class="font-semibold">0.00₺</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">Vergi (10%)</span>
                        <span id="tax" class="font-semibold">0.00₺</span>
                    </div>
                    <div class="border-t pt-4">
                        <div class="flex justify-between">
                            <span class="font-bold">Toplam</span>
                            <span id="total" class="font-bold">0.00₺</span>
                        </div>
                    </div>
                </div>

                <div class="mt-6">
                    <label class="block text-sm font-medium text-gray-700 mb-2">İndirim Kodu</label>
                    <div class="flex space-x-2">
                        <input type="text" id="promoCode" class="flex-1 border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-rose-500" placeholder="Enter code">
                        <button onclick="applyPromoCode()" class="bg-gray-800 text-white px-4 py-2 rounded hover:bg-gray-700 transition-colors">Uygula</button>
                    </div>
                </div>

                <button onclick="placeOrder()" class="w-full bg-rose-600 text-white py-3 rounded-lg mt-6 hover:bg-rose-700 transition-colors">Sipariş Oluştur</button>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script src="/js/store.js"></script> 
    <script>
        let cart = JSON.parse(localStorage.getItem('cart')) || [];
        const SHIPPING_COST = { standard: 10.00, express: 20.00 };
        const TAX_RATE = 0.10;

        function formatPrice(price) {
            return `$${price.toFixed(2)}`;
        }

        function updateCartCount() {
            document.querySelector('.cart-count').textContent = cart.reduce((total, item) => total + item.quantity, 0);
        }

        function renderOrderItem(item) {
            return `
                <div class="flex items-center">
                    <img src="${item.image}" alt="${item.name}" class="w-16 h-16 object-cover rounded">
                    <div class="ml-4 flex-1">
                        <h4 class="font-medium">${item.name}</h4>
                        <p class="text-gray-500">Quantity: ${item.quantity}</p>
                    </div>
                    <div class="font-medium">${formatPrice(item.price * item.quantity)}</div>
                </div>
            `;
        }

        function calculateTotals() {
            const subtotal = cart.reduce((total, item) => total + (item.price * item.quantity), 0);
            const deliveryOption = document.querySelector('input[name="delivery"]:checked').value;
            const shipping = SHIPPING_COST[deliveryOption];
            const tax = subtotal * TAX_RATE;
            const total = subtotal + shipping + tax;

            document.getElementById('subtotal').textContent = formatPrice(subtotal);
            document.getElementById('shipping').textContent = formatPrice(shipping);
            document.getElementById('tax').textContent = formatPrice(tax);
            document.getElementById('total').textContent = formatPrice(total);
        }

        function renderOrderSummary() {
            const orderItems = document.getElementById('orderItems');
            orderItems.innerHTML = cart.map(renderOrderItem).join('');
            calculateTotals();
        }

        function placeOrder() {
            const form = document.getElementById('checkoutForm');
            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }
            alert("Siparişiniz başarı ile oluşturuldu, Florist'i tercih ettiğiniz için teşekkür ederiz.");
            localStorage.removeItem('cart');
            window.location.href = '/';
        }

        document.querySelectorAll('input[name="delivery"]').forEach(radio => {
            radio.addEventListener('change', calculateTotals);
        });

        document.addEventListener('DOMContentLoaded', () => {
            updateCartCount();
            renderOrderSummary();
        });
    </script>
}


