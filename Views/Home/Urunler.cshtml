@model List<Florist.Entity.Urun>

@{

    ViewData["Title"] = "Urunler";

    Layout = "_Layout";

}
<link rel="stylesheet" href="/css/Urunler.css" />
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Florist - Fresh Flowers Delivered</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <style>

        .font-playfair {
            font-family: 'Playfair Display', serif;
        }

        .font-poppins {
            font-family: 'Poppins', sans-serif;
        }
    </style>
</head>
<body class="font-poppins">
    <!-- Header/Navigation -->
    <header class="bg-white shadow-md fixed w-full top-0 z-50">
        <nav class="container mx-auto px-4 py-4">
            <div class="flex justify-between items-center">
                <!-- Logo ve Yazı -->
                <div class="flex items-center space-x-2">
                    <!-- Logo -->
                    <img src="~/images/florist logo1.png alt="Florist Logo" class="h-8 w-8">
                    <!-- Yazı -->
                    <div class="text-2xl font-playfair font-bold text-rose-600">
                        Florist
                    </div>
                </div>

            <!-- Desktop Navigation -->
            <div class="hidden md:flex space-x-8">
                <a asp-controller="Home" asp-action="Index" class="text-gray-800 hover:text-rose-600 transition-colors">Ana Sayfa</a>
                <a href="/Home/Urunler" class="text-gray-800 hover:text-rose-600 transition-colors">Ürünler</a>
                <a href="/Home/Occasion" class="text-gray-800 hover:text-rose-600 transition-colors">Fırsatlar</a>
                <a href="/Home/Hakkimizda" class="text-gray-800 hover:text-rose-600 transition-colors">Hakkımızda</a>
            </div>

            <!-- Cart and Search -->
            <div class="flex items-center space-x-6">
                <form asp-controller="Search" asp-action="Index" method="get" class="relative">
                    <input type="text" name="query" placeholder="Ürün ara..." class="search-input">
                    <button type="submit" class="absolute right-2 top-1/2 -translate-y-1/2 text-rose-600">
                        <i class="fas fa-search"></i>
                    </button>

                </form>
                <a href="/Account/Login" class="text-gray-800 hover:text-rose-600 transition-colors">
                    <i class="fas fa-user"></i>
                </a>
                <a href="/Home/Cart" class="text-gray-800 hover:text-rose-600 transition-colors relative">
                    <i class="fas fa-shopping-cart"></i>
                    <span class="cart-count absolute -top-2 -right-2 bg-rose-600 text-white rounded-full w-5 h-5 flex items-center justify-center text-xs">0</span>
                </a>

            </div>
        </div>
    </nav>
</header>
<main class="urunler-container">
    <div class="urunler-grid">

        @foreach (var urun in Model)

        {
            <div class="urun-karti">
                <img src="@urun.Resim" alt="@urun.Ad" class="urun-img" />
                <h3 class="urun-baslik">@urun.Ad</h3>
                <p class="urun-aciklama">@urun.Aciklama</p>
                <p class="urun-fiyat">@urun.Fiyati.ToString("C")</p>
                <button class="sepete-ekle-btn">Sepete Ekle</button>
            </div>

        }
    </div>
</main>

</body>